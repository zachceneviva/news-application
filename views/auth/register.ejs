<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/header.ejs', {page: 'Register'}) %>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="vh-100 bg-image">
        <div class="mask d-flex align-items-center h-100 mt-4 mb-4">
          <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card mb-5 mt-5" style="border-radius: 15px;" id="register-box">
                  <div class="card-body p-5 pt-3">
                    <div class="log-img">
                      <img src="https://i.ibb.co/QHbVRK2/Zashlios-favicon.png" alt="zashlios-img">
                    </div>
                    <h2 class="text-uppercase text-center mb-5">Create an account</h2>
      
                    <form action="/register" method="POST">
                        <div class="form-outline mb-4">
                            <label class="form-label">Full Name</label>
                            <input name="fname" type="text" class="form-control form-control-lg" autocomplete="off" id="fname-capital" required/>
                          </div>
                      <div class="form-outline mb-4">
                        <label class="form-label">Email</label>
                        <input name="email" type="text" class="form-control form-control-lg" autocomplete="off" required/>
                      </div>
                      <div class="form-outline mb-4">
                        <label class="form-label">Username</label>
                        <input name="username" type="text" class="form-control form-control-lg" autocomplete="off" required/>
                      </div>
                      <div class="form-outline mb-4">
                        <label class="form-label">Account Type</label>
                        <select name="role" id="role-type" class="form-control custom-select form-control-lg" required>
                            <option value="Reader">Choose Account Type</option>
                            <option value="Reader">Reader</option>
                            <option value="Writer">Writer</option>
                        </select>
                      </div>
      
                      <div class="form-outline mb-2">
                        <label class="form-label" >Password</label>
                        <input  name="password" type="password" class="form-control form-control-lg" autocomplete="off" required/>
                      </div>
    
                      </div>
      
                      <div class="d-flex justify-content-center">
                        <input type="submit" id="register" class="btn btn-primary btn-block btn-lg text-white" value='Register'/>
                      </div>
      
                      <p class="text-center text-muted mt-5 mb-4">Have already an account? <a href="/login" class="fw-bold text-body"><u>Login here</u></a></p>
      
                    </form>
      
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>