<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include('../partials/header.ejs', {page: 'Home'}) %>

</head>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="content">
        <div class="article-content">
                <% for(let i=articles.length - 1; i >= 0; i--){ %>
                <div class="auth-date-views">
                    <div class="author-date">
                        <p class="author">
                            <%= articles[i].author %>
                        </p>

                        <p class="date">
                            <%= articles[i].date %> - <%= articles[i].topic %>
                        </p>
                    </div>
                    <div class="views">
                        <p>
                            Views: <%= articles[i].views %>
                        </p>
                    </div>
                </div>
                    <h1 class="title">
                        <%= articles[i].title %>
                    </h1>

                    <img src="<%= articles[i].articleImage %>" alt="Placeholder image" class="article-image" />

                    <p class="quick-look">
                        <b><em>Quick Look: </em></b> <%= articles[i].quickLook %>
                    </p>

                    <a href="/<%= articles[i].id %>" class="article-link">Go Deeper <i class="bi bi-arrow-right"></i></a>
                    <hr>
                    <% } %>
            </div>
    </div>

    <%- include('../partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>