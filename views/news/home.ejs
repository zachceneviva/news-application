<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include('../partials/header.ejs', {page: 'Home'}) %>

</head>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <% for(let i=articles.length - 1; i >= 0; i--){ %>

                    <p class="author">
                        <%= articles[i].author %>
                    </p>

                    <p class="date">
                        <%= articles[i].date %>
                    </p>

                    <h1 class="title">
                        <%= articles[i].title %>
                    </h1>

                    <img src="<%= articles[i].articleImage %>" alt="Placeholder image" class="article-image" />

                    <p class="quick-look">
                        <%= articles[i].quickLook %>
                    </p>

                    <a href="/<%= articles[i].id %>" class="article-link">Go Deeper</a>
                    <% } %>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>