<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include('../partials/header.ejs', {page: 'Update'}) %>

</head>
<body>
    <%- include('../partials/nav.ejs') %>

<div class="main">
    <div class="form-img">
        <img src="https://i.ibb.co/QHbVRK2/Zashlios-favicon.png" alt="zashlios-img">
    </div>
    <div class="form">

        <form action="/<%= article.id %>?_method=PUT" method="POST">
            <div class="mt-0">
                <label class="form-label">Author</label>
                <input class="form-control"
                type="text"
                placeholder="e.g. Ted Lasso"
                name="author"
                value="<%= article.author %>">
            </div>

            <div class="mt-4">
                <label class="form-label">Date</label>
                <input class="form-control"
                type="text"
                placeholder="MM/DD/YYYY"
                name="date"
                value="<%= article.date %>">
            </div>

            <div class="mt-4">
                <label class="form-label">Title</label>
                <input class="form-control"
                type="text"
                placeholder="Your headline"
                name="title"
                value="<%= article.title %>">
            </div>

            <div class="mt-4">
                <label class="form-label">Topic</label>
                <input class="form-control"
                type="text"
                placeholder="e.g. Health"
                name="topic"
                value="<%= article.topic %>">

            <div class="mt-4 mb-4">
                <label class="form-label">Image</label>
                <input class="form-control"
                type="text"
                placeholder="Link to article image"
                name="articleImage"
                value="<%= article.articleImage %>">
            </div>

            <div class="mt-4">
                <label class="form-label">Article Summary</label>
                <textarea class="form-control"
                type="text"
                placeholder="What the story is and why it matters"
                name="quickLook" 
                rows="5"><%= article.quickLook %></textarea>
            </div>

            <div class="mt-4 mb-4">
                <label class="form-label">Full Article</label>
                <textarea class="form-control"
                type="text"
                placeholder="The full story"
                name="fullText" 
                rows="10"><%= article.fullText %></textarea>
            </div>
        
            <div class="submit mb-5">
                <input type="submit" class="btn btn-primary" value="Update Article">
        </form>
                <a href="/home" class="btn btn-danger">
                    Cancel
                </a>
            </div>
    </div>
</div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>