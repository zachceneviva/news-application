<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include('../partials/header.ejs', {page: 'Go Deeper'}) %>

</head>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="content">
        <div class="article-content">
            <div class="auth-date-views">
                <div class="author-date">
                    <p class="date">
                        <%= article.date %> - <%= article.topic %>
                    </p>
                </div>
            </div>
                    <h1 class="title">
                        <%= article.title %>
                    </h1>

                    <p class="author-fulltext">
                        <%= article.author %>
                    </p>
                
                    <img src="<%= article.articleImage %>" alt="Placeholder image" class="article-image" />

                    <p class="full-text">
                        <%= article.fullText %>
                    </p>

                    <hr />

                <div class="input">
                    <form id="edit-form" class="form-inline" action="/<%= article.id %>/edit">
                        <input id="edit-edit" type="submit" class="btn btn-primary" value="Edit">
                    </form>

                    <form id="delete-form" class="form-inline" action="/<%= article.id %>?_method=DELETE" method="POST">
                        <input id="edit-delete" type="submit" class="btn btn-light my-2 my-sm-0 border border-dark" value="Delete">
                    </form>

                    <br /><br />

                </div>

            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>