<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include('../partials/header.ejs', {page: 'Go Deeper'}) %>

</head>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm">

                    <p class="author">
                        <%= article.author %>
                    </p>

                    <p class="date">
                        <%= article.date %>
                    </p>

                    <h1 class="title">
                        <%= article.title %>
                    </h1>

                    <img src="<%= article.articleImage %>" alt="Placeholder image" class="article-image" />

                    <p class="full-text">
                        <%= article.fullText %>
                    </p>

                    
                <div class="input">
                    <form id="edit-form" class="form-inline" action="/<%= article.id %>/edit">
                        <input id="edit-edit" type="submit" class="<%= (user !== article.user) ? 'd-none' : 'btn btn-primary' %>" value="Edit">
                    </form>

                    <form id="delete-form" class="form-inline" action="/<%= article.id %>?_method=DELETE" method="POST">
                        <input id="edit-delete" type="submit" class="<%= (user !== article.user) ? 'd-none' : 'btn btn-primary' %>" value="Delete">
                    </form>
                </div>

            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>