<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include('../partials/header.ejs', {page: 'Write'}) %>

</head>
<body>
    <%- include('../partials/nav.ejs') %>

<div class="main">
    <div class="form-img">
        <img src="https://i.ibb.co/QHbVRK2/Zashlios-favicon.png" alt="zashlios-img">
    </div>

    <div class="page-title">
        <h1>Write an Article</h1>
    </div>

    <hr class="sep-line"/>

    <div class="form">

        <form action="/new" method="POST">
            <div class="mt-0">
                <label class="form-label">Author</label>
                <input class="form-control"
                type="text"
                placeholder="e.g. Ted Lasso"
                name="author"
                autocomplete="off"
                required>
            </div>

            <!-- <div class="mt-4">
                <label class="form-label">Date</label>
                <input class="form-control"
                type="month"
                placeholder="MM/DD/YYYY"
                name="date">
            </div> -->

            <div class="mt-4">
                <label class="form-label">Title</label>
                <input class="form-control"
                type="text"
                placeholder="Your headline"
                name="title"
                autocomplete="off"
                required>
            </div>

            <div class="mt-4">
                <label class="form-label">Topic</label>
                <input class="form-control"
                type="text"
                placeholder="e.g. Health"
                name="topic"
                autocomplete="off"
                required>
            </div>

            <div class="mt-4 mb-4">
                <label class="form-label">Image</label>
                <input class="form-control"
                type="text"
                placeholder="Link to article image"
                name="articleImage"
                autocomplete="off"
                required>
            </div>

            <div class="mt-4">
                <label class="form-label">Article Summary</label>
                <textarea class="form-control"
                type="text"
                placeholder="What the story is and why it matters"
                name="quickLook" 
                rows="5" required></textarea>
            </div>

            <div class="mt-4 mb-5">
                <label class="form-label">Full Article</label>
                <textarea class="form-control"
                type="text"
                placeholder="The full story"
                name="fullText" 
                rows="10" required></textarea>
            </div>
        
            <div class="submit mb-5">
                <input type="submit" class="btn btn-primary" value="Post Article">
        </form>
                <a href="/home" class="btn btn-light my-2 my-sm-0 border border-dark">
                    Cancel
                </a>
            </div>
    </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>